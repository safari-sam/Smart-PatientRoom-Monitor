{
    "name": "Smart Patient Room Monitor",
    
    "image": "mcr.microsoft.com/devcontainers/rust:latest",
    
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/node:1": {}
    },
    
    "forwardPorts": [8080, 5432],
    "portsAttributes": {
        "8080": {
            "label": "Web Dashboard",
            "onAutoForward": "notify"
        },
        "5432": {
            "label": "PostgreSQL",
            "onAutoForward": "ignore"
        }
    },
    
    "postCreateCommand": "echo 'âœ… Environment ready!' && echo 'ðŸ‘‰ Run: docker-compose up --build' && echo 'ðŸ‘‰ Then open port 8080 from Ports tab'",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "ms-azuretools.vscode-docker",
                "humao.rest-client"
            ]
        }
    }
}