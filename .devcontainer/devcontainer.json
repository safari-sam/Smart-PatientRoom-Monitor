{
    "name": "Smart Patient Room Monitor",
    
    "dockerComposeFile": "../docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/app",
    
    "forwardPorts": [8080, 5432],
    "portsAttributes": {
        "8080": {
            "label": "Web Dashboard",
            "onAutoForward": "openBrowser"
        },
        "5432": {
            "label": "PostgreSQL",
            "onAutoForward": "ignore"
        }
    },
    
    "postStartCommand": "echo 'âœ… Environment ready! The app should start automatically.' && echo 'ðŸ“Š Dashboard: Click the Ports tab and open port 8080'",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "ms-azuretools.vscode-docker",
                "ckolkman.vscode-postgres",
                "humao.rest-client"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    }
}
